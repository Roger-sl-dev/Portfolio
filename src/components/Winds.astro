
---
const {Titulo}=Astro.props
import SVG from "../components/Icons/SVG.astro";
import SVG2 from "../components/Icons/SVG2.astro";
import SVG3 from "../components/Icons/SVG3.astro";


import Image from "astro/components/Image.astro";
const { styled }=Astro.props
---

<div class={ styled+ " flex flex-col  border-2 border-white backdrop-blur-2xl"}>
    <span class=" flex flex-row justify-between px-2 py-1 border-b-2 border-white bg-white" >
        <h3 class="  text-black text-2xl font-semibold">{Titulo}</h3>
        
            <span class=" flex flex-row gap-3 place-items-center">
           
                    <SVG3/>
                    <SVG2/>
                    <span class=" p-1 hover:bg-red-600">

                        <SVG/>
                    </span>
        
                

            </span>
        
    </span>
    <slot/>
</div>